{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "rcat",
  "version": "0.1.0",
  "identifier": "com.sanshanya.rcat",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "rust-cat",
        "label": "main",
        "width": 64,
        "height": 64,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": true,
        "shadow": false,
        "alwaysOnTop": true,
        "visible": true,
        "center": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}